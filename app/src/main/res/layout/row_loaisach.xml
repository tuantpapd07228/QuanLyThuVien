<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:weightSum="100"
    android:layout_marginVertical="5dp"
    android:background="@drawable/sach_bg_gradient"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="80"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginVertical="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã loại"
                android:textStyle="bold"
                android:paddingHorizontal="15dp"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="nguyen van a"
                android:textStyle="bold"

                android:paddingHorizontal="15dp"
                android:textSize="20sp"
                android:maxLines="2"
                android:id="@+id/loaisach_maloai"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginVertical="5dp"

            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Tên loại"
                android:paddingHorizontal="15dp"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="nguyen van a"
                android:paddingHorizontal="15dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:id="@+id/loaisach_mtenloai"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_weight="20"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/baseline_brush_24"
            android:id="@+id/loaisach_update"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/baseline_clear_24"
            android:id="@+id/loaisach_delete"/>
    </LinearLayout>
</LinearLayout>
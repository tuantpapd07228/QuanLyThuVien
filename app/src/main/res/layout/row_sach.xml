<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="20dp"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="100"
        android:background="@drawable/sach_bg_gradient"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên sách"
                    android:textStyle="bold"
                    android:paddingHorizontal="10dp"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="nguyen van a"
                    android:textStyle="bold"

                    android:paddingHorizontal="15dp"
                    android:textSize="20sp"
                    android:maxLines="2"
                    android:id="@+id/sach_tensach"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginVertical="5dp"

                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá thuê sách"
                    android:paddingHorizontal="15dp"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="nguyen van a"
                    android:paddingHorizontal="15dp"
                    android:textSize="20sp"
                    android:maxLines="2"
                    android:id="@+id/sach_giathue"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginVertical="5dp"

                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loại sách"
                    android:paddingHorizontal="15dp"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="nguyen van a"
                    android:paddingHorizontal="15dp"
                    android:textSize="20sp"
                    android:maxLines="2"
                    android:id="@+id/sach_loaisach"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginVertical="5dp"

                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã sach"
                    android:paddingHorizontal="15dp"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="nguyen van a"
                    android:paddingHorizontal="15dp"
                    android:textSize="20sp"
                    android:maxLines="2"
                    android:id="@+id/sach_masach"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="20"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/baseline_brush_24"
                android:id="@+id/sach_update"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/baseline_clear_24"
                android:id="@+id/sach_delete"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
